<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Log In</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center min-h-screen overflow-hidden">
  <div class="bg-gray-800/60 backdrop-blur-md text-white rounded-2xl shadow-2xl p-8 w-full max-w-md mx-4 sm:mx-auto border border-gray-700">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-blue-400 mb-2">Welcome Back</h2>
      <p class="text-gray-400">Log in to your account</p>
    </div>
    <form method="post" action="/auth/login">
      <!-- Email Field -->
      <div class="mb-4">
        <label for="email" class=" text-sm font-medium mb-2 flex items-center">
          <i class="ri-mail-line mr-2 text-blue-400"></i>Email Address
        </label>
        <div class="relative">
          <input 
            type="email" 
            id="email" 
            name="email"
            placeholder="you@example.com"
            class="w-full px-4 py-3 rounded-lg bg-gray-700/50 border border-gray-600 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
            required
          >
          <i class="ri-check-line absolute right-3 top-1/2 transform -translate-y-1/2 text-green-400"></i>
        </div>
      </div>

      <!-- Password Field -->
      <div class="mb-4 relative">
        <label for="password" class=" text-sm font-medium mb-2 flex items-center">
          <i class="ri-lock-line mr-2 text-blue-400"></i>Password
        </label>
        <div class="relative">
          <input 
            type="password" 
            id="password" 
            name="password" 
            placeholder="Enter your password"
            class="w-full px-4 py-3 pr-12 rounded-lg bg-gray-700/50 border border-gray-600 text-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
            required
          >
          <button type="button" onclick="togglePassField()" 
            class="absolute top-1/2 right-3 transform -translate-y-1/2 text-gray-400 hover:text-blue-400 focus:outline-none">
            <i id="eyeBtn" class="ri-eye-line"></i>
          </button>
        </div>
        <a href="#" class="text-sm text-gray-400 hover:text-blue-400 mt-1  text-right">Forgot password?</a>
      </div>

      <!-- Submit Button -->
      <button 
        type="submit"
        class="w-full mt-6 py-3 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 transition transform hover:scale-105 duration-300 flex items-center justify-center"
      >
        <i class="ri-login-box-line mr-2"></i>
        Log in
      </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center my-6">
      <hr class="flex-grow border-gray-700">
      <span class="mx-4 text-gray-400">or</span>
      <hr class="flex-grow border-gray-700">
    </div>

    <!-- Social Login -->
    <div class="flex justify-center space-x-4">
      <button class="bg-gray-700 p-3 rounded-full hover:bg-gray-600 transition">
        <i class="ri-google-fill text-red-500"></i>
      </button>
      <button class="bg-gray-700 p-3 rounded-full hover:bg-gray-600 transition">
        <i class="ri-github-fill text-white"></i>
      </button>
      <button class="bg-gray-700 p-3 rounded-full hover:bg-gray-600 transition">
        <i class="ri-facebook-fill text-blue-500"></i>
      </button>
    </div>

    <!-- Footer Links -->
    <p class="text-sm text-center text-gray-400 mt-6">
      Don't have an account? 
      <a  draggable="true"  href="/auth/signup" class="text-blue-400 hover:underline">Sign up</a>
    </p>

    
  </div>

  <script>
    const field = document.querySelector('#password');
    const eyeBtn = document.querySelector('#eyeBtn');

    function togglePassField() {
      if (field.type === 'password') {
        field.type = 'text';
        eyeBtn.classList.remove('ri-eye-line');
        eyeBtn.classList.add("ri-eye-off-line");
      } else {
        field.type = 'password';
        eyeBtn.classList.remove('ri-eye-off-line');
        eyeBtn.classList.add('ri-eye-line');
      }
    }
  </script>
</body>
</html>